    "version": "0.2.0",
    "configurations": [
        {
            "name": "FastAPI",
            "type": "python",
            "request": "launch",
            "module": "uvicorn",
            "env": {
                "MONGO_URI": "mongodb://mongo:27017/",
            },
            "args": [
                "--app-dir",
                "./src/",
                "api:app",
                "--reload",
                "--port",
                "8000"
            ]
        },
        {
            "name": "Python: Debug Tests",
            "type": "python",
            "request": "launch",
            "program": "${file}",
            "purpose": [
                "debug-test"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}